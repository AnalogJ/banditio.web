<div class="row" ng-repeat="(room_id, resource) in resources">

    <div class="col-lg-6">
        <div class="panel panel-primary" id="headings">
            <div class="panel-heading">Resource Info</div>
            <div class="panel-body">
                <div class="alert alert-success">

                    <strong>Active</strong> This webpage is currently active.<a href="#" class="alert-link">Click here</a> if you would like to access the javascript console.
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-cloud-upload"></span> Save</button>
                    <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </div>

            </div>
            <table class="table table-striped table-bordered table-condensed" style=" table-layout: fixed; word-wrap: break-word;" ng-show="resource.response_info">
                <thead>
                <tr>
                    <th>Header</th>
                    <th>Value</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="(key, value) in resource.response_info">
                    <td>{{key}}</td>
                    <td>{{value}}</td>
                </tr>
                </tbody>
            </table>
            <div class="panel-footer">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Mock Response</button>
                    <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-warning-sign"></span> JSConsole</button>
                </div>
            </div>
        </div>
        <div class="panel panel-default" id="tables">
            <div class="panel-heading">Request
            </div>

                <table class="table table-striped table-bordered table-condensed" style=" table-layout: fixed; word-wrap: break-word;" ng-show="resource.request_header">
                    <thead>
                    <tr>
                        <th>Header</th>
                        <th>Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="(key, value) in resource.request_header">
                        <td>{{key}}</td>
                        <td>{{value}}</td>
                    </tr>
                    </tbody>
                </table>
                <hr ng-show="resource.request_body"/>
            <div class="panel-body" ng-show="resource.request_body">
                <button class="btn btn-primary pull-right"><span class="glyphicon glyphicon-new-window"></span></button>
                <pre>
                    {{resource.request_body}}
                </pre>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default" id="content-formatting">
            <div class="panel-heading">Response
            </div>
            <table class="table table-striped table-bordered table-condensed" style=" table-layout: fixed; word-wrap: break-word;" ng-show="resource.response_header">
                <thead>
                <tr>
                    <th>Header</th>
                    <th>Value</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="(key, value) in resource.response_header">
                    <td>{{key}}</td>
                    <td>{{value}}</td>
                </tr>
                </tbody>
            </table>
            <hr ng-show="resource.response_body"/>
            <div class="panel-body" ng-if="resource.response_body">
                <button class="btn btn-primary pull-right"><span class="glyphicon glyphicon-new-window"></span></button>
                <pre class="prettyprint linenums" ng-set-html="resource.response_body"></pre>

            </div>
        </div>
    </div>
    <hr/>
</div>